/*Questão 8: Soma e Média
Faça um programa que leia 5 números e informe a soma e a média dos números. */

import java.util.Scanner;

public class Exlacos08 {
    public static void main (String[] args) {
        Scanner sc = new Scanner(System.in);
        double n[] = new double[5]; 

        System.out.println("Informe 5 números: ");

        for (int numeros = 0; numeros < n.length; numeros++) {
            System.out.printf("Número %d: ", numeros+1);
            n[numeros] = sc.nextDouble();
        }

        int soma = 0;
        double media = 0;
		System.out.printf("A soma dos números digitados é: ");
		for (int i = 0; i < n.length; i++) {
			soma += n[i];
            media = soma/n.length;
        }

        System.out.println(soma);
        System.out.println("E a média dos números informados é: " + media);

        sc.close();


     



        
    }
    
}
