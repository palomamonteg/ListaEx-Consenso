//Faça um programa que pergunte o preço de três produtos e informe qual produto você deve comprar, 
//sabendo que a decisão é sempre pelo mais barato. */

import java.util.Scanner;

public class Ola {

public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    System.out.println("Informe o preço do 1º produto: ");
    double p1 = sc.nextDouble();
    System.out.println("Informe o preço do 2º produto: ");
    double p2 = sc.nextDouble();
    System.out.println("Informe o preço do 3º produto: ");
    double p3 = sc.nextDouble();
    if (p1 < p2 || p1 < p3) {
        System.out.printf("O produto que custa R$%.2f é o mais barato!", p1);
    } else if (p2 < p1 || p2  < p3) {
        System.out.printf("O produto que custa R$%.2f é o mais barato!", p2);
    } else if (p3 < p1 || p3 < p2) {
        System.out.printf("O produto que custa R$%.2f é o mais barato!", p3);

    }
    sc.close();

}
}
