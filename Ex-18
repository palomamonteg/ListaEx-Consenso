/* Faça um programa que pergunte o sexo e calcule o peso ideal */

import java.util.Scanner;

public class POO02ED01 {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite seu sexo:\n[M] - Masculino\n[F] - Feminino");
        char sexo = sc.next().toUpperCase().charAt(0);
        System.out.println("Digite a sua altura: ");
        double altura = sc.nextDouble();

        double pesoIdeal;

        if (sexo == 'M') {
            pesoIdeal = (72.7 * altura) - 58;
            System.out.printf("Seu peso ideal é: %.2f", pesoIdeal);
        } else if (sexo == 'F') {
            pesoIdeal = (62.1*altura) - 44.7;
            System.out.printf("Seu peso ideal é: %.2fkg", pesoIdeal);
        }
        sc.close();

        }
        
        
    }

