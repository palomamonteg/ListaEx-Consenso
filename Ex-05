/*Exercícios - Treina Recife 
 * 
 * Questão 5: Conversão de Unidades (Comprimento)
Faça um programa que converta metros para centímetros (1m = 100cm). */

import java.util.Scanner;


public class Atividade2 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Digite o valor em metros: m");
		double metro = sc.nextDouble();
		double conversao = metro*100;
		System.out.printf("O valor informado convertido para cm fica: %.2fcm", conversao);
		
		sc.close();
		
		
  }
			
}
