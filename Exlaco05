/*Questão 5: Crescimento Populacional II
Altere o programa anterior permitindo ao usuário informar as populações e as taxas
de crescimento iniciais. Valide a entrada e permita repetir a operação. */

import java.util.Scanner;

public class Exlacos05 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Informe a população A: ");
        double paisA = sc.nextDouble();
        System.out.println("Informe a população B: ");
        double paisB = sc.nextDouble();

        double anos = 0;

       while (paisA < paisB) {
            paisA = paisA * (1.03/100);
            paisB = paisB * (1.015/100);
            anos++;

        }
        
        System.out.println("O número de anos necessários para que a população do país A ultrapasse ou iguale a população do país B, mantidas as taxas de crescimento é: " + anos + "anos.");
        sc.close();
    }

    
}
